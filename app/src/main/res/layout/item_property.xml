<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_property"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="223dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/main_background_1"
            android:id="@+id/img_property_item_preview_big"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/price_board_property_item_height"
            android:background="@drawable/shadow_item_property"
            android:orientation="vertical"
            android:id="@+id/card_property_desc"
            android:layout_width="match_parent"
            android:layout_height="100dp">

                <LinearLayout
                    android:gravity="bottom"
                    android:layout_marginBottom="@dimen/standard_space"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/standard_space"
                    android:layout_marginStart="@dimen/standard_space"
                    android:layout_marginRight="@dimen/standard_space"
                    android:layout_marginEnd="@dimen/standard_space"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/tiny_view_gap_space"
                        android:layout_height="wrap_content"
                        >

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:cardBackgroundColor="@color/white"
                            android:layout_height="wrap_content">

                            <TextView
                                android:gravity="center"
                                android:id="@+id/txt_property_type"
                                android:text="HOSTEL"
                                android:textSize="10sp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginStart="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginRight="3dp"
                                android:textAllCaps="true"
                                android:padding="1dp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:layout_height="15dp"/>
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:id="@+id/txt_property_name"
                            android:layout_marginLeft="5dp"
                            android:singleLine="true"
                            android:layout_marginStart="5dp"
                            style="@style/PropertyPreviewText"
                            android:textColor="@color/white"
                            android:text="Super hostel with very huge long name with over 100500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/lyt_rating"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="@dimen/standard_space"
                            android:layout_marginRight="@dimen/standard_space"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="-7dp"
                            android:layout_marginStart="-7dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_star_white"/>
                        <TextView
                            android:id="@+id/txt_property_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            style="@style/MyTheme.TextBasic"
                            android:text="Good"
                            android:textSize="14sp"
                            />
                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_free_tag"
                            card_view:cardBackgroundColor="@color/green_action"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:gravity="center"
                                android:text="@string/free_facility_tag"
                                android:textSize="10sp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginStart="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginRight="3dp"
                                android:textAllCaps="true"
                                android:padding="1dp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:gravity="center"
                            android:id="@+id/txt_free_amenities"
                            android:text="Linen, Breakfast"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="15dp"/>
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_prices"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryTransparent"
            android:paddingLeft="@dimen/standard_space"
            android:paddingStart="@dimen/standard_space"
            android:layout_height="@dimen/price_board_property_item_height">

            <LinearLayout
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:id="@+id/lyt_dorms"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/price_search_result_dorms"
                    android:textColor="@color/white"
                    android:textSize="@dimen/price_type_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dorms"/>

                <TextView
                    android:id="@+id/txt_price_search_result_value_dorms"
                    android:textColor="@color/white"
                    android:textSize="@dimen/price_search_result_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$30.37"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_private"
                android:background="@null"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/price_search_result_private"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/price_type_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/private_rooms"/>

                <TextView
                    android:id="@+id/txt_price_search_result_value_private"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/price_search_result_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$30.37"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:layout_marginRight="@dimen/standard_space"
                android:layout_marginEnd="@dimen/standard_space"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_check_availability"
                    android:text="@string/check_availability"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    style="@style/GreenButton"
                    android:layout_width="123dp"
                    android:layout_height="28dp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_book"
            android:layout_marginStart="@dimen/standard_space"
            android:layout_marginLeft="@dimen/standard_space"
            android:layout_marginEnd="@dimen/standard_space"
            android:layout_marginRight="@dimen/standard_space"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true"
            style="@style/GreenButton"
            android:textAllCaps="true"
            android:text="@string/booking_in_3_steps"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <View
            android:id="@+id/btn_book_background"
            android:background="#F0000000"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <ImageView
            android:id="@+id/btn_add_to_favourite"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_favourite_disabled"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
