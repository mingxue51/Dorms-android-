<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_faq_title"
        android:layout_marginLeft="@dimen/margin_faq_title"
        android:layout_marginStart="@dimen/margin_faq_title"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/title_faq_text_size"
        android:textStyle="bold" />

    <com.mc.youthhostels.customviews.ExpandableTextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content_faq"
        android:layout_marginLeft="@dimen/margin_faq_title"
        android:layout_marginStart="@dimen/margin_faq_title"
        android:textSize="@dimen/content_faq_text_size" />

</LinearLayout>