<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_no_rooms_added"
        android:id="@+id/txt_dialog_message"
        android:layout_marginTop="@dimen/margin_buttom_dialog_ok_btn"
        android:textSize="@dimen/dialog_message_text_size"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <Button
        android:layout_marginTop="@dimen/standard_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_message_text_size"
        android:text="@string/ok"
        android:id="@+id/btn_dialog_ok"
        android:background="@color/white"
        android:layout_below="@+id/txt_dialog_message"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>