<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/fragment_search">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp">

        <TextView
            android:id="@+id/check_in_day"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            style="@style/DateTexLight"
            android:textSize="40sp"
            android:text="15"/>

        <TextView
            android:layout_alignLeft="@+id/check_in_day"
            android:layout_alignStart="@+id/check_in_day"
            android:layout_alignTop="@+id/check_in_day"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            style="@style/MagnifierText"
            android:textColor="@color/lineInFragmentSearch"
            android:textSize="13sp"
            android:text="@string/checkin"/>

        <TextView
            android:id="@+id/check_in_month"
            android:layout_toRightOf="@+id/check_in_day"
            android:layout_toEndOf="@+id/check_in_day"
            android:layout_alignTop="@+id/check_in_day"
            style="@style/DateTextBold"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:text="SEP"/>

        <TextView
            android:id="@+id/check_in_week_day"
            android:layout_below="@+id/check_in_month"
            android:layout_alignStart="@+id/check_in_month"
            android:layout_alignLeft="@+id/check_in_month"
            style="@style/DateText"
            android:layout_marginTop="0dp"
            android:text="Tuesday"/>

        <View
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-5dp"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/lineInFragmentSearch"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp">

        <TextView
            android:id="@+id/check_out_day"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            style="@style/DateTexLight"
            android:textSize="40sp"
            android:text="15"/>

        <TextView
            android:layout_alignLeft="@+id/check_out_day"
            android:layout_alignStart="@+id/check_out_day"
            android:layout_alignTop="@+id/check_out_day"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            style="@style/MagnifierText"
            android:textColor="@color/lineInFragmentSearch"
            android:textSize="13sp"
            android:text="@string/checkout"/>

        <TextView
            android:id="@+id/check_out_month"
            android:layout_toRightOf="@+id/check_out_day"
            android:layout_toEndOf="@+id/check_out_day"
            android:layout_alignTop="@+id/check_out_day"
            style="@style/DateTextBold"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:text="SEP"/>

        <TextView
            android:id="@+id/check_out_week_day"
            android:layout_below="@+id/check_out_month"
            android:layout_alignStart="@+id/check_out_month"
            android:layout_alignLeft="@+id/check_out_month"
            style="@style/DateText"
            android:layout_marginTop="0dp"
            android:text="Tuesday"/>
    </RelativeLayout>
</merge>