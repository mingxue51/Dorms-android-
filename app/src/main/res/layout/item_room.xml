<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="57dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView

            android:layout_weight="7"
            android:id="@+id/txt_room_name"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            style="@style/RoomName"
            android:text="Dorm (4 beds) Female Only"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:id="@+id/txt_room_price"
            style="@style/RoomPrice"
            android:text="16.67$"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_order_control"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="@drawable/back"
        android:layout_width="90dp"
        android:layout_height="29dp">

        <ImageButton
            android:id="@+id/btn_minus"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/icon_minus_grey"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/txt_selected"
            android:layout_weight="1"
            style="@style/SelectedCount"
            android:text="0"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_plus_green"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:contentDescription=""/>
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_order"/>
</LinearLayout>