<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    >

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="wrap_content"
        android:layout_height="22dp">
        <View
            android:id="@+id/view_ratings_enabled"
            android:layout_weight="56"
            android:background="@color/ratingEnabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </View>

        <View
            android:id="@+id/view_ratings_disabled"
            android:layout_weight="44"
            android:background="@color/ratingDisabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </View>

    </LinearLayout>

    <TextView
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:id="@+id/txt_rating_name"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Atmosphere"
        style="@style/MyTheme.TextBasic.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:id="@+id/txt_rating_value"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="56%"
        style="@style/MyTheme.TextBasic.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>