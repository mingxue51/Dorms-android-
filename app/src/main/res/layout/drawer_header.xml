<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/drawer_header"
    android:layout_height="@dimen/drawer_header_height"
    android:paddingTop="@dimen/drawer_header_margin_top"
    android:background="@color/drawer_header">

    <LinearLayout
        android:layout_marginTop="@dimen/drawer_header_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/logo_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/logo_margin_bottom"
            android:background="@color/transparent"
            android:src="@drawable/icon_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/drawer_header_margin_top"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_drawer_take"
            android:textStyle="bold"
            android:text="@string/logo" />

    </LinearLayout>

</RelativeLayout>