<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.5dip" />
            <gradient android:startColor="@color/medium_gray" android:endColor="@color/medium_gray" android:angle="270.0" android:centerY="1.0" android:centerColor="@color/medium_gray" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.5dip" />
                <gradient android:startColor="@color/orange" android:endColor="@color/orange" android:angle="270.0" android:centerY="1.0" />
            </shape>
        </clip>
    </item>
</layer-list>